{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Sphere",
        "version": "0.4.3"
    },
    "tauri": {
        "allowlist": {
            "window": {
                "create": true,
                "startDragging": true
            },
            "http": {
                "all": true,
                "request": true,
                "scope": [
                    "http://**",
                    "https://**"
                ]
            },
            "dialog": {
                "open": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "$APP/*",
                    "$DESKTOP/*",
                    "$HOME/*"
                ]
            },
            "path": {
                "all": true
            },
            "notification": {
                "all": true
            },
            "globalShortcut": {
                "all": true
            },
            "clipboard": {
                "writeText": true,
                "readText": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.tmshv.sphere",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "hiddenTitle": true,
                "titleBarStyle": "Overlay",
                "acceptFirstMouse": true,
                "fullscreen": false,
                "resizable": true,
                "title": "Sphere",
                "width": 1000,
                "height": 750,
                "minWidth": 300,
                "minHeight": 300
            }
        ]
    }
}
